@model WebService.Models.ApiCep

<!DOCTYPE html>

<html>
<head>

    <meta name="viewport" content="width=device-width" />
    <link href="/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <title>Cadastrar e listar Ceps</title>
    <style>
        table, th, td {
            border: 1px solid black;
        }
    </style>

</head>
<body>

    </h2> Cadastrar Cep </h2>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="ApiCep">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Cep" class="control-label"></label>
                    <input asp-for="Cep" class="form-control" />
                    <span asp-validation-for="Cep" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Consultar e Cadastrar" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Voltar</a><br><br>

    </div>

</body>
</html>